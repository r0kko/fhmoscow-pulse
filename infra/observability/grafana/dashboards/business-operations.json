{
  "title": "Pulse Business Operations",
  "uid": "pulse-business-operations",
  "schemaVersion": 38,
  "version": 1,
  "tags": ["pulse", "business"],
  "time": { "from": "now-7d", "to": "now" },
  "refresh": "2m",
  "timepicker": {
    "refresh_intervals": ["1m", "2m", "5m", "15m"],
    "time_options": ["6h", "12h", "24h", "2d", "7d", "30d"]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Active users",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "green", "value": 100 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" },
        "textMode": "value",
        "colorMode": "value"
      },
      "targets": [
        {
          "expr": "business_users_total{status=\"active\"}",
          "instant": true,
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "stat",
      "title": "Blocked users",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 10 },
              { "color": "red", "value": 25 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" },
        "textMode": "value",
        "colorMode": "value"
      },
      "targets": [
        {
          "expr": "business_users_total{status=\"blocked\"}",
          "instant": true,
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "stat",
      "title": "Pending documents",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 25 },
              { "color": "red", "value": 75 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" },
        "textMode": "value",
        "colorMode": "value"
      },
      "targets": [
        {
          "expr": "business_documents_pending_total",
          "instant": true,
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "stat",
      "title": "Documents > 7d",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 10 },
              { "color": "red", "value": 25 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" },
        "textMode": "value",
        "colorMode": "value"
      },
      "targets": [
        {
          "expr": "business_documents_overdue_total{bucket=\"gt_7d\"}",
          "instant": true,
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "stat",
      "title": "Unscheduled matches",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 15 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" },
        "textMode": "value",
        "colorMode": "value"
      },
      "targets": [
        {
          "expr": "business_matches_upcoming_total{window=\"unscheduled\"}",
          "instant": true,
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "stat",
      "title": "Trainings need attendance",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 3 },
              { "color": "red", "value": 8 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" },
        "textMode": "value",
        "colorMode": "value"
      },
      "targets": [
        {
          "expr": "business_trainings_upcoming_total{window=\"needs_attendance\"}",
          "instant": true,
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "table",
      "title": "User status breakdown",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "options": {
        "showHeader": true,
        "footer": { "show": false }
      },
      "targets": [
        {
          "expr": "business_users_total",
          "instant": true,
          "format": "table",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ],
      "transformations": [
        { "id": "labelsToFields", "options": { "mode": "columns" } },
        {
          "id": "filterFieldsByName",
          "options": { "include": { "names": ["status_label", "Value"] } }
        },
        {
          "id": "organize",
          "options": {
            "renameByName": { "status_label": "Status", "Value": "Users" },
            "indexByName": { "Users": 1, "Status": 0 }
          }
        }
      ]
    },
    {
      "type": "table",
      "title": "Document workflow",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "options": {
        "showHeader": true,
        "footer": { "show": false }
      },
      "targets": [
        {
          "expr": "business_documents_total",
          "instant": true,
          "format": "table",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ],
      "transformations": [
        { "id": "labelsToFields", "options": { "mode": "columns" } },
        {
          "id": "filterFieldsByName",
          "options": { "include": { "names": ["status_label", "Value"] } }
        },
        {
          "id": "organize",
          "options": {
            "renameByName": { "status_label": "Status", "Value": "Documents" },
            "indexByName": { "Documents": 1, "Status": 0 }
          }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Match scheduling outlook",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" },
        "stacking": { "group": "match", "mode": "normal" }
      },
      "targets": [
        {
          "expr": "business_matches_upcoming_total",
          "legendFormat": "{{window}}",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Training sessions outlook",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" },
        "stacking": { "group": "training", "mode": "normal" }
      },
      "targets": [
        {
          "expr": "business_trainings_upcoming_total",
          "legendFormat": "{{window}}",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "logs",
      "title": "Recent business errors",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 9 },
      "options": { "showTime": true, "dedupStrategy": "none", "wrapLogMessage": true },
      "datasource": { "type": "loki", "uid": "Loki" },
      "targets": [
        {
          "expr": "{service=\"api\"} | json | status_code >= 400 | type != \"access\"",
          "refId": "A"
        }
      ]
    },
    {
      "type": "text",
      "title": "Notes",
      "mode": "markdown",
      "gridPos": { "x": 0, "y": 29, "w": 24, "h": 5 },
      "options": {
        "content": "* Pending documents include all statuses outside Signed/Archived.\n* Matches overdue include fixtures past kickoff without a final status.\n* Trainings needing attendance capture sessions in the past without attendance mark." 
      }
    }
  ],
  "links": [
    {
      "type": "dashboards",
      "title": "App dashboards",
      "tags": ["pulse"],
      "asDropdown": true,
      "icon": "dashboard"
    }
  ]
}
