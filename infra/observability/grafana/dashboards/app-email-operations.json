{
  "__inputs": [],
  "__requires": [],
  "title": "Pulse Email Delivery",
  "uid": "pulse-email",
  "version": 1,
  "schemaVersion": 38,
  "tags": ["pulse", "email"],
  "time": {"from": "now-6h", "to": "now"},
  "timepicker": {"refresh_intervals": ["5s","10s","30s","1m","5m"]},
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Ready queue depth",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      "options": {"reduceOptions": {"calcs": ["max"], "fields": ""}},
      "targets": [
        {"expr": "max(email_queue_depth{bucket=\"ready\"})", "datasource": {"type": "prometheus", "uid": "Prometheus"}}
      ]
    },
    {
      "type": "stat",
      "title": "Scheduled backlog",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 20},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      "options": {"reduceOptions": {"calcs": ["max"], "fields": ""}},
      "targets": [
        {"expr": "max(email_queue_depth{bucket=\"scheduled\"})", "datasource": {"type": "prometheus", "uid": "Prometheus"}}
      ]
    },
    {
      "type": "stat",
      "title": "Dead-letter queue",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "options": {"reduceOptions": {"calcs": ["max"], "fields": ""}},
      "targets": [
        {"expr": "max(email_queue_depth{bucket=\"dead_letter\"})", "datasource": {"type": "prometheus", "uid": "Prometheus"}}
      ]
    },
    {
      "type": "stat",
      "title": "Fallback deliveries (1h)",
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "options": {"reduceOptions": {"calcs": ["sum"], "fields": ""}},
      "targets": [
        {"expr": "sum(increase(email_queue_enqueued_total{status=\"fallback\"}[1h]))", "datasource": {"type": "prometheus", "uid": "Prometheus"}}
      ]
    },
    {
      "type": "timeseries",
      "title": "Queue activity by status",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}]}
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      },
      "targets": [
        {"expr": "sum(rate(email_queue_enqueued_total{status=~\"queued|scheduled\"}[5m])) by (status)", "legendFormat": "{{status}}", "datasource": {"type": "prometheus", "uid": "Prometheus"}},
        {"expr": "sum(rate(email_queue_enqueued_total{status=~\"fallback|failed\"}[5m])) by (status)", "legendFormat": "{{status}}", "datasource": {"type": "prometheus", "uid": "Prometheus"}}
      ]
    },
    {
      "type": "timeseries",
      "title": "Retries and failures",
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}]}
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      },
      "targets": [
        {"expr": "sum(rate(email_queue_retry_total[5m]))", "legendFormat": "retry rate", "datasource": {"type": "prometheus", "uid": "Prometheus"}},
        {"expr": "sum(rate(email_queue_failure_total[5m]))", "legendFormat": "failure rate", "datasource": {"type": "prometheus", "uid": "Prometheus"}}
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency by percentile",
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "orange", "value": 5}, {"color": "red", "value": 15}]}
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      },
      "targets": [
        {"expr": "histogram_quantile(0.5, sum by (le) (rate(email_delivery_duration_seconds_bucket{status=\"ok\"}[5m])))", "legendFormat": "p50", "datasource": {"type": "prometheus", "uid": "Prometheus"}},
        {"expr": "histogram_quantile(0.95, sum by (le) (rate(email_delivery_duration_seconds_bucket{status=\"ok\"}[5m])))", "legendFormat": "p95", "datasource": {"type": "prometheus", "uid": "Prometheus"}},
        {"expr": "histogram_quantile(0.99, sum by (le) (rate(email_delivery_duration_seconds_bucket{status=\"ok\"}[5m])))", "legendFormat": "p99", "datasource": {"type": "prometheus", "uid": "Prometheus"}}
      ]
    },
    {
      "type": "timeseries",
      "title": "Error latency and rate",
      "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {"unit": "s"},
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "failure rate (ops)"},
            "properties": [
              {"id": "unit", "value": "req/s"},
              {"id": "custom.axisPlacement", "value": "right"},
              {"id": "custom.axisLabel", "value": "Failures / s"},
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
            ]
          }
        ]
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      },
      "targets": [
        {"expr": "histogram_quantile(0.95, sum by (le) (rate(email_delivery_duration_seconds_bucket{status=\"error\"}[5m])))", "legendFormat": "error p95 latency", "datasource": {"type": "prometheus", "uid": "Prometheus"}},
        {"expr": "sum(rate(email_queue_failure_total[5m]))", "legendFormat": "failure rate (ops)", "datasource": {"type": "prometheus", "uid": "Prometheus"}}
      ]
    },
    {
      "type": "timeseries",
      "title": "Queued emails by purpose",
      "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
      "fieldConfig": {"defaults": {"unit": "req/s"}},
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull"]},
        "tooltip": {"mode": "multi"}
      },
      "targets": [
        {"expr": "sum(rate(email_queue_enqueued_total{status=\"queued\"}[5m])) by (purpose)", "legendFormat": "{{purpose}}", "datasource": {"type": "prometheus", "uid": "Prometheus"}}
      ]
    },
    {
      "type": "logs",
      "title": "Email delivery logs",
      "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
      "options": {"showTime": true, "dedupStrategy": "none", "wrapLogMessage": true},
      "datasource": {"type": "loki", "uid": "Loki"},
      "targets": [
        {"expr": "{service=\"api\"} |= \"Email job\"", "refId": "A"},
        {"expr": "{service=\"api\"} |= \"Email delivered\"", "refId": "B"}
      ]
    }
  ]
}
