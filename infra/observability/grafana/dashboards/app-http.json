{
  "title": "Pulse App HTTP",
  "uid": "pulse-app-http",
  "schemaVersion": 38,
  "version": 1,
  "tags": ["pulse", "http"],
  "time": { "from": "now-6h", "to": "now" },
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "route",
        "type": "query",
        "label": "Route",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "query": "label_values(http_requests_total, route)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "status",
        "type": "query",
        "label": "Status",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "query": "label_values(http_requests_total, status)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Latency p95 by route",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, route) (rate(http_request_duration_seconds_bucket{route=~\"$route\"}[5m])))",
          "legendFormat": "{{route}}",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "bargauge",
      "title": "5xx rate by route (5m)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum by (route) (rate(http_requests_total{status=~\"5..\",route=~\"$route\"}[5m]))",
          "legendFormat": "{{route}}",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "bargauge",
      "title": "RPS by route (5m)",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum by (route) (rate(http_requests_total{route=~\"$route\"}[5m]))",
          "legendFormat": "{{route}}",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "table",
      "title": "Top 4xx by route (5m)",
      "gridPos": { "x": 0, "y": 14, "w": 12, "h": 8 },
      "options": { "showHeader": true },
      "transformations": [
        { "id": "labelsToFields", "options": { "keepLabels": true } }
      ],
      "fieldConfig": { "defaults": { "links": [
        {
          "title": "Explore logs",
          "url": "/explore?left=%5B%22now-6h%22,%22now%22,%22Loki%22,%7B%22expr%22:%22%7Bservice%3D%5C"api%5C",type%3D%5C"access%5C",route%3D%5C"$__value%5C",status%3D%5C"403%5C"%7D%20%7C%20json%22%7D%5D"
        }
      ] }, "overrides": [] },
      "targets": [
        {
          "expr": "topk(10, sum by (route) (rate(http_requests_total{status=~\"4..\"}[5m])))",
          "format": "table",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "logs",
      "title": "Recent access logs (filters)",
      "gridPos": { "x": 12, "y": 14, "w": 12, "h": 8 },
      "options": { "dedupStrategy": "none", "wrapLogMessage": true },
      "targets": [
        {
          "expr": "{service=\"api\", type=\"access\"} | route=~\"$route\" | json | status=~\"$status\"",
          "datasource": { "type": "loki", "uid": "Loki" }
        }
      ]
    }
  ]
}
