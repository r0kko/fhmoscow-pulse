{
  "title": "Containers (cAdvisor)",
  "uid": "pulse-cadvisor-containers",
  "schemaVersion": 38,
  "version": 1,
  "tags": ["pulse", "cadvisor", "docker"],
  "time": {"from": "now-6h", "to": "now"},
  "refresh": "30s",
  "panels": [
    {"type":"timeseries","title":"CPU by service (cores)","gridPos":{"x":0,"y":0,"w":24,"h":8},
      "targets":[{"expr":"sum by (container_label_com_docker_compose_service) (rate(container_cpu_usage_seconds_total[$__rate_interval]))","legendFormat":"{{container_label_com_docker_compose_service}}","datasource":{"type":"prometheus","uid":"Prometheus"}}]
    },
    {"type":"timeseries","title":"Memory working set by service (MB)","gridPos":{"x":0,"y":8,"w":24,"h":8},
      "targets":[{"expr":"sum by (container_label_com_docker_compose_service) (container_memory_working_set_bytes)/1024/1024","legendFormat":"{{container_label_com_docker_compose_service}}","datasource":{"type":"prometheus","uid":"Prometheus"}}]
    },
    {"type":"timeseries","title":"Network rx/tx by service (bytes/s)","gridPos":{"x":0,"y":16,"w":24,"h":8},
      "targets":[
        {"expr":"sum by (container_label_com_docker_compose_service) (rate(container_network_receive_bytes_total[$__rate_interval]))","legendFormat":"{{container_label_com_docker_compose_service}} rx","datasource":{"type":"prometheus","uid":"Prometheus"}},
        {"expr":"sum by (container_label_com_docker_compose_service) (rate(container_network_transmit_bytes_total[$__rate_interval]))","legendFormat":"{{container_label_com_docker_compose_service}} tx","datasource":{"type":"prometheus","uid":"Prometheus"}}
      ]
    },
    {"type":"timeseries","title":"Filesystem usage by service (MB)","gridPos":{"x":0,"y":24,"w":24,"h":8},
      "targets":[{"expr":"sum by (container_label_com_docker_compose_service) (container_fs_usage_bytes)/1024/1024","legendFormat":"{{container_label_com_docker_compose_service}}","datasource":{"type":"prometheus","uid":"Prometheus"}}]
    }
  ]
}

